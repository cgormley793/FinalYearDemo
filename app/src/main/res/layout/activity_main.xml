<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_log_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Fitness PT App" />

    <EditText
        android:id="@+id/editText_Log_email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Enter Email"
        android:ems="10"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/editText_Log_Password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="Enter Password"
        android:inputType="textPassword"

         />

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:onClick="LoginUser"
        android:layout_gravity="center_horizontal"
        android:text="Login" />

    <TextView
        android:id="@+id/textView_Register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:onClick="goRegister"
        android:text="Register" />

    <TextView
        android:id="@+id/textView_Forgottenpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="goForgottenPassword"
        android:layout_gravity="center_horizontal"
        android:text="Forgotten Password" />
</LinearLayout>


